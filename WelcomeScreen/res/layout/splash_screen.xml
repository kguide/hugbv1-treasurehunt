<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/plainbackground"
    >
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_marginTop="165px"
    	android:layout_marginLeft="73px">

	    <Button 
	    	android:id="@+id/myGamesButtonPlayScreen"
	    	android:layout_width="170px"
	    	android:layout_height="wrap_content"
	    	android:text="@string/myGames"
	    />
	    	    
	    <Button 
	    	android:id="@+id/myGamesButtonFindGame"
	    	android:layout_width="170px"
	    	android:layout_height="wrap_content"
	    	android:text="@string/findGame"	
	    />
	    
    </LinearLayout>
    
    <Button 
    	android:id="@+id/findAGamePlayScreen"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/findGame"	
    >
    </Button>
    
</LinearLayout>
